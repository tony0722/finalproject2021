   

 <div id="itemsContainer">
  
  <h1>menus </h1>
     
      <% @items.each do |item| %>
      
      
      <div class="itemhols">
       <h1><%= item.title %></h1>
       
       <%= link_to (image_tag item.image_url, :class => "itemholsIm" ,size:"300*300"   ), item %>
       
        <p><%= item.description %></p>
       <p>Price <%= number_to_currency(item.price, :unit => "â‚¬") %>
       <br>
        Category: <%= item.category %>
        <br>
        
        <br>
         Ingredients: <%= item.brand %>
        <br>
       
        </p>
       
       
       
       <p>
        
        
      
            <% if current_user && current_user.admin? %>
       
         
         
         
         <%= link_to 'Edit',  edit_item_path(item), :class => "button", :role => "button" %>
         <%= link_to 'Destroy',  item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
         <% end %>
         
          <%= link_to 'Show',  item, :class => "button", :role => "button" %>
          <a href="/cart/<%= item.id %>" class="button">Add To Cart</a>
         
       </p>
       
       
        
      </div>
    <% end %>
      
</div>

<br>

<% if current_user && current_user.admin? %> 

<%= link_to 'New Item',  new_item_path, :class => "button", :role => "button" %>



<%= link_to 'New category',new_category_path, :class => "button", :role => "button" %>  

<% end %>




